body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.gallery {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Дві колонки */
    grid-gap: 30px; /* Відступи між зображеннями */
}

.gallery img {
    max-width: 100%;
    height: auto;
}

.gallery div {
    max-width: 100%;
    height: auto;
	width: 200px; 
    border: solid 1px black; 
}

.block1 { 
    width: 200px; 
    background: #ccc;
    padding: 5px;
    padding-right: 20px; 
    border: solid 1px black; 
    float: left;
   }